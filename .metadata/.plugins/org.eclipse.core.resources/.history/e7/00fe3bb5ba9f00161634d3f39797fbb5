import java.io.BufferedReader;
import java.nio.file.Paths;
import java.io.FileReader;

public class CountLines {
	void NumLines(String x) {
		String[] files = x.split(".txt ");
		int[] lines = new int[files.length];
		try {
			for (int i = 0; i < files.length; i++) {
				BufferedReader b = new BufferedReader(new FileReader(Paths.get(files[i]).toString()));
				int nLines = 0;
				while ((b.readLine()) != null) {
					nLines++;
				}
				lines[i] = nLines;
				b.close();
			}
		} catch (Exception e) {
		}
		for (int n = 0; n < files.length; n++) {
			System.out.println(files[n] + " - " + lines[n] + " lines");
		}
	}
	public static void main(String [] args) {
		CountLines C = new CountLines();
		C.NumLines("Scores.txt Names.txt");
	}
}
