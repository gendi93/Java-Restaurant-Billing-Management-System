import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.DefaultComboBoxModel;
import javax.swing.JComboBox;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;

public class Items extends JFrame implements ItemListener{
	static JComboBox comboBox;
	static JOptionPane option;
	public Items() {
		getContentPane().setLayout(null);
		this.setSize(200,200);
		
		JComboBox comboBox = new JComboBox();
		comboBox.setBounds(10, 30, 164, 30);
		comboBox.setModel(new DefaultComboBoxModel(new String[] { "GBP", "USD", "EURO", "YEN" }));
		getContentPane().add(comboBox);
		comboBox.addItemListener(this);
		
		JOptionPane option = new JOptionPane();
		option.setBounds(10,100,164,30);
		getContentPane().add(option);
	}
	public static void main(String [] args) {
		Items i = new Items();
		i.setVisible(true);
	}
	@Override
	public void itemStateChanged(ItemEvent arg0) {
		option.setMessage(arg0);
		
	}

}
