import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.event.MouseMotionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Mouse extends JFrame {

	static int screenX = 0;
	static int screenY = 0;
	int myX = 0;
	int myY = 0;
	static int deltaX = 0;
	static int deltaY = 0;

	public Mouse() {
		this.setSize(200, 200);
		getContentPane().setLayout(null);

		JButton b1 = new JButton();
		b1.setBounds(72, 42, 50, 80);
		getContentPane().add(b1);
		b1.addMouseListener(new MouseListener() {
			public void mouseClicked(MouseEvent e) {
				screenX = e.getXOnScreen();
				screenY = e.getYOnScreen();

				final int myX = e.getX();
				final int myY = e.getY();
				
				System.out.println(myX + " " + myY);
			}

			public void mouseEntered(MouseEvent e) {
				// TODO Auto-generated method stub

			}

			public void mouseExited(MouseEvent e) {
				// TODO Auto-generated method stub

			}

			public void mousePressed(MouseEvent e) {
				// TODO Auto-generated method stub

			}

			public void mouseReleased(MouseEvent e) {
				System.out.println("From coordinates (" + myX + ", " + myY + ")" + " to coordinates (" + (myX + deltaX) + ", " + (myY + deltaY) + ")");
			}

		});
		b1.addMouseMotionListener(new MouseMotionListener() {
			public void mouseDragged(MouseEvent e) {
				
				deltaX = e.getXOnScreen() - screenX;
				deltaY = e.getYOnScreen() - screenY;

				b1.setLocation(myX + deltaX, myY + deltaY);
				System.out.println(myX);
			}

			public void mouseMoved(MouseEvent arg0) {
				// TODO Auto-generated method stub

			}
		});

	}

	public static void main(String[] args) {
		Mouse m = new Mouse();
		m.setVisible(true);
	}

}
